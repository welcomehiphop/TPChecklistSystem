<!--           android:textSize="10sp"-->
<!--           android:text="No"/>-->
       <TextView
           android:layout_weight="0.1"
           android:id="@+id/txt_Week"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:textColor="@color/black"
           android:textSize="16sp"
           android:text="52"/>
<!--       <TextView-->
<!--           android:layout_weight="0.1"-->
